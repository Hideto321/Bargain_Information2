<h1>投稿編集</h1>

<%= form_for(@post) do |f| %>
    <h4>商品画像</h4>
    <%= f.attachment_field :product_image %>
    <h4>商品</h4>
    <%= f.text_field :product %>
    <h4>値段</h4>
    <%= f.text_area :price %>
    <h4>ショップコメント</h4>
    <%= f.text_area :product_comment %>
    <br><%= f.submit '保存' %></br>

    <%= link_to "Show", post_path(@post) %>
    <%= link_to "Back", posts_path %>

<% end %>

