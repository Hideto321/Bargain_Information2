<h1 class="editpost__title">投稿編集</h1>

<%= form_for(@post) do |f| %>
<div class="editpost">
    <div class="editpost_contents_image">
        <h4>商品画像</h4>
        <%= f.attachment_field :product_image %>
    </div>
    <div class="editpost_contents_product">
        <h4>商品</h4>
        <%= f.text_field :product %>
    </div>
    <div class="editpost_contents_price">
        <h4>値段</h4>
        <%= f.text_area :price %>
    </div>
    <div class="editpost_contents_product-comment">
        <h4>ショップコメント</h4>
        <%= f.text_area :product_comment %>
    </div>
    <div class="editpost_contents_post-button">
        <%= f.submit '保存' %>
    </div>

    <div class="editpost_button_show-back">
        <%= link_to "Show", post_path(@post) %>
        <%= link_to "Back", posts_path %>
    </div>

<% end %>
</div>
