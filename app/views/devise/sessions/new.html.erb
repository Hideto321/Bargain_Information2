<div class="new-session_title">
  <h2 class="new-session_h2">ログイン</h2>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="new-session_box">
  <div class="new-session_form">
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="session_submit-button">
      <%= f.submit "ログイン" %>
    </div>
    <% end %>

    <div class="session_registration-button">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
