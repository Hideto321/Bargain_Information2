
<div class="new-registration_title">
  <h2>店舗新規登録</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="new-registration_box">
  <div class="new-registration_form">
      <div class="field">
        <%= f.label :店舗名 %><br />
        <%= f.text_field :shop_name, :placeholder => "スーパー 支店名", :class=>"inText", autofocus: true, autocomplete: "shop_name" %>
      </div>
  
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, :placeholder => "abc@aaa.com", :class=>"inText", autofocus: true, autocomplete: "email" %>
      </div>
  
      <div class="field">
        <%= f.label :郵便番号 %><br />
        <%= f.text_field :shop_postal_code, :placeholder => "1234567", :class=>"inText", autofocus: true, autocomplete: "shop_postal_code" %>
      </div>
  
      <div class="field">
        <%= f.label :住所 %><br />
        <%= f.text_field :shop_address, :placeholder => "", :class=>"inText", autofocus: true, autocomplete: "shop_address" %>
      </div>
  
      <div class="field">
        <%= f.label :パスワード %><br />
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, :placeholder => "123456", :class=>"inText", autocomplete: "new-password" %>
      </div>
  
      <div class="field">
        <%= f.label :パスワード（確認） %><br />
        <%= f.password_field :password_confirmation, :placeholder => "123456", :class=>"inText", autocomplete: "new-password" %>
      </div>
  
      <div class="registration_submit-button">
        <%= f.submit "登録" %>
      </div>
    <% end %>
  
    <div class="registration_login-button">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
